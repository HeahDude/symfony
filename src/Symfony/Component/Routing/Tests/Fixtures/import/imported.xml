<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="route_with_globals" path="/imported-with-globals" />

    <route id="route_with_specifics" path="/imported-with-specifics" host="specific_host" schemes="http" methods="POST">
        <default key="global">is_specific</default>
        <default key="specific">test</default>
        <requirement key="global">should_be_specific</requirement>
        <requirement key="specific">should_be_test</requirement>
        <option key="utf8">false</option>
        <condition>def</condition>
    </route>
</routes>
